{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017",
      "es2019.array"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "suppressImplicitAnyIndexErrors": true,
  },
  "exclude": [
    "node_modules",
    "./types",
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
